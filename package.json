{
  "name": "river",
  "private": true,
  "version": "0.1.0",
  "description": "Do your job, then let go",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/invrs/river.git"
  },
  "keywords": [
    "tasks",
    "task-env"
  ],
  "author": "Inverse Labs <labs@inverse.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/invrs/river/issues"
  },
  "homepage": "https://github.com/invrs/river#readme",
  "scripts": {
    "build": "lerna run build",
    "bootstrap": "lerna bootstrap",
    "fix": "npm run lint -- --fix",
    "lint": "eslint --ignore-path .gitignore --ext=js .",
    "pretty": "prettier --write **/*.css **/*.json **/*.md",
    "publish": "lerna publish",
    "test": "lerna run test"
  },
  "dependencies": {
    "@babel/runtime": "7.0.0-beta.42",
    "rimraf": "2"
  },
  "devDependencies": {
    "@babel/cli": "7.0.0-beta.42",
    "@babel/core": "7.0.0-beta.42",
    "@babel/plugin-proposal-object-rest-spread": "7.0.0-beta.42",
    "@babel/plugin-transform-runtime": "7.0.0-beta.42",
    "@babel/preset-env": "7.0.0-beta.42",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.3",
    "commandland": "^0.1.2",
    "eslint": "4",
    "eslint-config-prettier": "2",
    "eslint-plugin-prettier": "2",
    "eslint-plugin-react": "7",
    "fxtr": "^1.2.0",
    "husky": "1.0.0-rc.8",
    "lerna": "^2.11.0",
    "lint-staged": "^6.1.1",
    "prettier": "^1.13.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended",
      "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      },
      "ecmaVersion": 8,
      "sourceType": "module"
    },
    "rules": {
      "curly": "error",
      "indent": [
        "error",
        2,
        {
          "SwitchCase": 1
        }
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "max-len": [
        "error",
        {
          "code": 60,
          "ignoreRegExpLiterals": true,
          "ignoreStrings": true
        }
      ],
      "no-console": [
        "error",
        {
          "allow": [
            "warn",
            "error"
          ]
        }
      ],
      "quotes": [
        "error",
        "double"
      ],
      "react/display-name": "off",
      "react/no-find-dom-node": "off",
      "react/prop-types": "off",
      "react/react-in-jsx-scope": "off",
      "semi": [
        "error",
        "never"
      ],
      "sort-keys": [
        "error",
        "asc",
        {
          "caseSensitive": true,
          "natural": false
        }
      ],
      "sort-vars": [
        "error",
        {
          "ignoreCase": true
        }
      ],
      "strict": 0
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm test"
    }
  },
  "jest": {
    "roots": [
      "<rootDir>/test/"
    ],
    "setupFiles": [
      "./test/setup.js"
    ],
    "testMatch": [
      "**/*Test.js"
    ],
    "verbose": true
  },
  "links": {
    "@invrs/dot-prop-immutable": "../dot-store/packages/dot-prop-immutable",
    "dot-store": "../dot-store/packages/dot-store-core",
    "dot-store-fs": "../dot-store/packages/dot-store-fs",
    "dot-store-iframe": "../dot-store/packages/dot-store-iframe",
    "dot-store-message": "../dot-store/packages/dot-store-message",
    "dot-store-react": "../dot-store/packages/dot-store-react",
    "task-env": "../task-env"
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --ignore-path .gitignore --fix",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 60,
    "semi": false,
    "trailingComma": "es5"
  },
  "starters": [
    "babel",
    "babel-node",
    "eslint",
    "husky",
    "lerna"
  ],
  "babel": {
    "env": {
      "test": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "targets": {
                "node": "6.14"
              }
            }
          ]
        ]
      }
    },
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "6.14"
          }
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread",
      "@babel/plugin-transform-runtime"
    ]
  }
}
