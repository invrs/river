{
  "name": "@invrs/npm-tasks",
  "version": "0.8.13",
  "description": "River tasks to run npm commands",
  "main": "dist/index.js",
  "license": "MIT",
  "author": {
    "name": "Inverse Labs",
    "email": "labs@inverse.com"
  },
  "keywords": [
    "npm",
    "tasks"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/invrs/river.git"
  },
  "homepage": "https://github.com/invrs/river/tree/master/packages/npm-tasks#readme",
  "bugs": {
    "url": "https://github.com/invrs/river/issues"
  },
  "scripts": {
    "build": "rimraf dist; babel lib --out-dir dist --source-maps",
    "fix": "npm run lint -- --fix",
    "lint": "eslint --ignore-path .gitignore --ext=js .",
    "prepublishOnly": "npm run build",
    "pretest": "npm run build",
    "pretty": "prettier --write **/*.css **/*.json **/*.md",
    "test": "jest",
    "watch": "rimraf dist; babel lib --watch --out-dir dist --source-maps"
  },
  "dependencies": {
    "@babel/runtime": "7.0.0-beta.42",
    "fs-extra": "^5.0.0"
  },
  "devDependencies": {
    "@babel/cli": "7.0.0-beta.42",
    "@babel/core": "7.0.0-beta.42",
    "@babel/plugin-proposal-object-rest-spread": "7.0.0-beta.42",
    "@babel/plugin-transform-runtime": "7.0.0-beta.42",
    "@babel/preset-env": "7.0.0-beta.42",
    "babel-core": "^7.0.0-bridge.0",
    "commandland": "0.1",
    "fxtr": "1",
    "jest": "22",
    "rimraf": "2"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test/setup.js"
    ],
    "testMatch": [
      "<rootDir>/test/**/*Test.js"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "6.14"
          }
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread",
      "@babel/plugin-transform-runtime"
    ]
  },
  "starters": [
    "basics",
    "babel",
    "babel-node",
    "babel-scripts",
    "jest",
    "jest-scripts",
    "watchman-babel"
  ],
  "watchman": {
    "triggers": [
      {
        "name": "babel",
        "expression": [
          "anyof",
          [
            "match",
            "lib/**/*.js",
            "wholename"
          ]
        ],
        "command": [
          "npm",
          "run",
          "build"
        ]
      }
    ]
  }
}
