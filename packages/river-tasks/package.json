{
  "name": "river-tasks",
  "version": "0.8.32",
  "description": "Do your job, then let go",
  "bin": {
    "river": "./river"
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf dist; babel lib --out-dir dist --source-maps",
    "fix": "npm run lint -- --fix",
    "prepublishOnly": "npm run build",
    "pretty": "prettier --write **/*.css **/*.json **/*.md",
    "lint": "eslint --ignore-path .gitignore --ext=js .",
    "test": "jest",
    "watch": "rimraf dist; babel lib --watch --out-dir dist --source-maps"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/invrs/river.git"
  },
  "keywords": [
    "tasks",
    "task-env"
  ],
  "author": "Inverse Labs <labs@inverse.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/invrs/river/issues"
  },
  "homepage": "https://github.com/invrs/river#readme",
  "dependencies": {
    "@babel/runtime": "7.0.0-beta.42",
    "@invrs/npm-tasks": "^0.8.29",
    "default-tasks": "^0.8.19",
    "encrypt-tasks": "^0.8.29",
    "find-up": "^2.1.0",
    "fs-extra": "5",
    "lerna-tasks": "^0.8.31",
    "link-tasks": "^0.8.27",
    "starter-tasks": "^0.8.32",
    "task-env": "^2.14.5",
    "watchman-tasks": "^0.8.25"
  },
  "devDependencies": {
    "@babel/cli": "7.0.0-beta.42",
    "@babel/core": "7.0.0-beta.42",
    "@babel/plugin-proposal-object-rest-spread": "7.0.0-beta.42",
    "@babel/plugin-transform-runtime": "7.0.0-beta.42",
    "@babel/preset-env": "7.0.0-beta.42",
    "babel-core": "^7.0.0-bridge.0",
    "commandland": "0.1",
    "fxtr": "1",
    "jest": "22",
    "rimraf": "2"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/test/setup.js"
    ],
    "testMatch": [
      "<rootDir>/test/**/*Test.js"
    ]
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "6.14"
          }
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread",
      "@babel/plugin-transform-runtime"
    ]
  },
  "starters": [
    "basics",
    "babel",
    "babel-node",
    "babel-scripts",
    "jest",
    "jest-scripts",
    "watchman-babel"
  ],
  "watchman": {
    "triggers": [
      {
        "name": "babel",
        "expression": [
          "anyof",
          [
            "match",
            "lib/**/*.js",
            "wholename"
          ]
        ],
        "command": [
          "npm",
          "run",
          "build"
        ]
      }
    ]
  }
}
