{
  "name": "encrypt-tasks",
  "version": "0.1.1",
  "description":
    "Task Env tasks to encrypt/decrypt files or JSON values",
  "main": "dist/index.js",
  "scripts": {
    "build":
      "rimraf dist; babel lib --out-dir dist --source-maps",
    "fix": "npm run lint -- --fix",
    "prepublishOnly": "npm run build",
    "pretest": "npm run build",
    "pretty": "prettier --write **/*.css **/*.json **/*.md",
    "lint": "eslint --ignore-path .gitignore --ext=js .",
    "test": "jest test"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/invrs/river.git"
  },
  "keywords": ["task-env", "tasks", "encrypt"],
  "author": "Inverse Labs <labs@inverse.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/invrs/river/issues"
  },
  "homepage":
    "https://github.com/invrs/river/tree/master/packages/encrypt-tasks#readme",
  "devDependencies": {
    "babel-cli": "6",
    "babel-core": "6",
    "babel-plugin-transform-async-to-generator": "6",
    "babel-plugin-transform-object-rest-spread": "6",
    "babel-preset-node6": "11",
    "commandland": "0.1",
    "eslint": "4",
    "eslint-config-prettier": "2",
    "eslint-plugin-prettier": "2",
    "fxtr": "1",
    "husky": "^0.15.0-rc.3",
    "jest": "22",
    "lint-staged": "6",
    "prettier": "1",
    "rimraf": "^2.6.2",
    "source-map-support": "0",
    "task-env": "2"
  },
  "dependencies": {
    "fs-extra": "5",
    "glob": "7"
  },
  "jest": {
    "setupFiles": ["./test/setup.js"],
    "testMatch": ["**/*Test.js"]
  }
}
