{
  "name": "encrypt-tasks",
  "version": "0.3.0",
  "description": "Task Env tasks to encrypt/decrypt files or JSON values",
  "license": "MIT",
  "main": "dist/index.js",
  "author": {
    "name": "Inverse Labs",
    "email": "labs@inverse.com"
  },
  "keywords": [
    "task-env",
    "tasks",
    "encrypt"
  ],
  "homepage": "https://github.com/invrs/river/tree/master/packages/encrypt-tasks#readme",
  "bugs": {
    "url": "https://github.com/invrs/river/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/invrs/river.git"
  },
  "scripts": {
    "build": "rimraf dist; babel lib --out-dir dist --source-maps",
    "fix": "npm run lint -- --fix",
    "lint": "eslint --ignore-path .gitignore --ext=js .",
    "prepublishOnly": "npm run build",
    "pretest": "npm run build",
    "pretty": "prettier --write **/*.css **/*.json **/*.md",
    "test": "jest test",
    "watch": "rimraf dist; babel lib --watch --out-dir dist --source-maps"
  },
  "dependencies": {
    "fs-extra": "5",
    "glob": "7",
    "@babel/runtime": "7.0.0-beta.42",
    "rimraf": "2"
  },
  "devDependencies": {
    "commandland": "0.1",
    "fxtr": "^1.2.0",
    "jest": "22",
    "rimraf": "^2.6.2",
    "source-map-support": "^0.5.5",
    "task-env": "2",
    "@babel/cli": "7.0.0-beta.42",
    "@babel/core": "7.0.0-beta.42",
    "@babel/plugin-proposal-object-rest-spread": "7.0.0-beta.42",
    "@babel/plugin-transform-runtime": "7.0.0-beta.42",
    "@babel/preset-env": "7.0.0-beta.42",
    "babel-core": "^7.0.0-bridge.0"
  },
  "jest": {
    "setupFiles": [
      "./test/setup.js"
    ],
    "testMatch": [
      "**/*Test.js"
    ]
  },
  "starters": [
    "babel",
    "babel-node"
  ],
  "babel": {
    "env": {
      "test": {
        "presets": [
          [
            "@babel/preset-env",
            {
              "targets": {
                "node": "6.14"
              }
            }
          ]
        ]
      }
    },
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "6.14"
          }
        }
      ]
    ],
    "plugins": [
      "@babel/plugin-proposal-object-rest-spread",
      "@babel/plugin-transform-runtime"
    ]
  }
}
